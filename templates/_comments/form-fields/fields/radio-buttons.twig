<div class="cc-radios">
    {%- for key, option in field.options %}
        {%- if option is not iterable %}
            {%- set option = { label: option, value: key } %}
        {%- endif %}

        {% set id = 'comments-' ~ field.handle ~ '-' ~ random() %}

        <div class="cc-radio">
            <input id="{{ id }}" type="radio" name="fields[{{ field.handle }}]" value="{{ option.value }}" {% if required %}required{% endif %}>

            <label for="{{ id }}">
                {{ option.label | raw }}
            </label>
        </div>
    {%- endfor %}
</div>
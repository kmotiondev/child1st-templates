{% macro build(cards = []) %}
    {% if cards|length %}
        {% for card in cards %}
            {% include [
                "_partials/contactcards/#{card.type.handle}.twig",
                "_partials/contactcards/missing.twig"
            ] with {
                card : card
            } only %}
        {% endfor %}
    {% else %}
        {% if currentUser %}
            <div class="container mx-auto">
                <pre class="heading-xs p-8">Entry contains no contact cards.</pre>
            </div>
        {% endif %}
    {% endif %}
{% endmacro %}
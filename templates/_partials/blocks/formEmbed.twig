{% set form = block.formSelect %}

{% if block.color and block.color.value == 'beige' %}
    {% set color = 'bg-beige-100' %}
{% else %}
    {% set color = '' %}
{% endif %}

{% if form %}
<section id="{{ form.handle }}" class="py-[72px] px-4 lg:py-24 lg:px-20 {{ color }}">
    <div class="lg:container mx-auto">
        <div class="max-w-[60rem] mx-auto">
            {% if block.heading %}
            <div class="font-effra font-bold text-2xl lg:text-[2rem] leading-[1.3] lg:leading-[1.2] text-blue-900 mb-3 lg:mb-4">{{block.heading}}</div>
            {% endif %}
            {% if block.subheading %}
            <div class="font-effra font-normal text-base lg:text-lg leading-6 text-blue-900 mb-6 lg:mb-8">{{block.subheading}}</div>
            {% endif %}
            {# Form #}
            {{ craft.freeform.form(form.handle).render({
                color: color
            }) }}
        </div>
    </div>
</section>
{% endif %}
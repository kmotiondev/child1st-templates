{% set bannerTitle = title is defined ? title : 'Page Title' %}
{% set bannerText = subtitle is defined ? subtitle : 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis.' %}

<section class="page-banner">
    <div class="container mx-auto relative pt-6">
    
        {% if breadcrumbMenu is defined %}
        {% set currentUrl = craft.app.request.url %}
        <ol class="breadcrumbs">
            <li class="breadcrumb">
                <a href="/">
                    Home
                </a>
            </li>
            
            {% for title,url in breadcrumbMenu %}
                {% set isActive = (currentUrl == url) %}
                <li class="breadcrumb">
                {% if isActive %}
                        <div>
                            <svg class="breadcrumb-arrow-icon" viewBox="0 0 11 10" fill="none" xmlns="http://www.w3.org/2000/svg"><g opacity="0.5"><path d="M7.80941 5.33187L4.68441 8.45687C4.59635 8.54493 4.47691 8.5944 4.35238 8.5944C4.22784 8.5944 4.1084 8.54493 4.02034 8.45687C3.93228 8.36881 3.88281 8.24937 3.88281 8.12484C3.88281 8.0003 3.93228 7.88086 4.02034 7.7928L6.8137 5.00023L4.02113 2.20687C3.97752 2.16326 3.94293 2.1115 3.91934 2.05453C3.89574 1.99756 3.88359 1.9365 3.88359 1.87484C3.88359 1.81317 3.89574 1.75211 3.91934 1.69514C3.94293 1.63817 3.97752 1.58641 4.02113 1.54281C4.06473 1.4992 4.11649 1.46461 4.17346 1.44102C4.23043 1.41742 4.29149 1.40527 4.35316 1.40527C4.41482 1.40527 4.47588 1.41742 4.53285 1.44102C4.58982 1.46461 4.64159 1.4992 4.68519 1.54281L7.81019 4.6678C7.85384 4.7114 7.88845 4.76319 7.91204 4.8202C7.93563 4.8772 7.94774 4.9383 7.94767 5C7.94759 5.06169 7.93534 5.12277 7.91162 5.17971C7.88789 5.23666 7.85316 5.28837 7.80941 5.33187Z" fill="#253F84"/></g></svg>
                            {{title}}
                        </div>
                {% else %}
                        <a href="{{url}}">
                            <svg class="breadcrumb-arrow-icon" viewBox="0 0 11 10" fill="none" xmlns="http://www.w3.org/2000/svg"><g opacity="0.5"><path d="M7.80941 5.33187L4.68441 8.45687C4.59635 8.54493 4.47691 8.5944 4.35238 8.5944C4.22784 8.5944 4.1084 8.54493 4.02034 8.45687C3.93228 8.36881 3.88281 8.24937 3.88281 8.12484C3.88281 8.0003 3.93228 7.88086 4.02034 7.7928L6.8137 5.00023L4.02113 2.20687C3.97752 2.16326 3.94293 2.1115 3.91934 2.05453C3.89574 1.99756 3.88359 1.9365 3.88359 1.87484C3.88359 1.81317 3.89574 1.75211 3.91934 1.69514C3.94293 1.63817 3.97752 1.58641 4.02113 1.54281C4.06473 1.4992 4.11649 1.46461 4.17346 1.44102C4.23043 1.41742 4.29149 1.40527 4.35316 1.40527C4.41482 1.40527 4.47588 1.41742 4.53285 1.44102C4.58982 1.46461 4.64159 1.4992 4.68519 1.54281L7.81019 4.6678C7.85384 4.7114 7.88845 4.76319 7.91204 4.8202C7.93563 4.8772 7.94774 4.9383 7.94767 5C7.94759 5.06169 7.93534 5.12277 7.91162 5.17971C7.88789 5.23666 7.85316 5.28837 7.80941 5.33187Z" fill="#253F84"/></g></svg>
                            {{title}}
                        </a>
                {% endif %}
                </li>
            {% endfor %}
        </ol>
        {% endif %}
    
        <div class="page-banner-content">
            <h1>{{bannerTitle|nl2br}}</h1>
            {% if bannerText %}
            <p>{{bannerText}}</p>
            {% endif %}
        </div>

        {% if variant == 'v2' %}
            {% include "_partials/shapes/banner/blue-lines.svg" %}
            {% include "_partials/shapes/banner/orange-sparkle.svg" %}
        {% elseif variant == 'v3' %}
            {% include "_partials/shapes/banner/purple-lines.svg" %}
            {% include "_partials/shapes/banner/yellow-circle.svg" %}
        {% else %}
            {% include "_partials/shapes/banner/yellow-star.svg" %}
            {% include "_partials/shapes/banner/pink-sparkle.svg" %}
        {% endif %}

    </div>
    <div class="page-banner-bottom w-full h-auto bg-white">
        {% if variant == 'v2' %}
            {% include "_partials/shapes/banner/beige-v2.svg" %}
        {% else %}
            {% include "_partials/shapes/banner/beige-v1.svg" %}
        {% endif %}
    </div>

</section>
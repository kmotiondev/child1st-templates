{% set testimonials = craft.entries().section('testimonials').isFeatured(false).all() %}

<section class="testimonial-grid">
    <div class="container mx-auto py-9 lg:py-16">
        <div class="show-all">
            <div class="show-all-content">
                <div class="columns-1 md:columns-2 lg:columns-3 gap-4">
                    {% for testimonial in testimonials %}
                    <div class="testimonial-card relative mb-4 inline-block">
                        <div class="testimonial-card-title">{{ testimonial.title }}</div>
                        <p class="testimonial-card-body">{{ testimonial.simpleContent|striptags }}</p>
                        <div class="testimonial-card-author">{{ testimonial.contentAuthor }}</div>
                    </div>
                    {% endfor %}
                </div>
                <div class="show-all-overlay white"></div>
            </div>
            <div class="show-all-btn-container">
                <button class="button button--secondary show-all-btn">Show All</button>
            </div>
        </div>
    </div>
</section>
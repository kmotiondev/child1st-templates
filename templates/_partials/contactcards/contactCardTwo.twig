{% import "_macros/icons.twig" as icons %}

<div class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-6">
    <div class="contact-card h-full">
        <div class="contact-card-title">
            {% set iconOne = card.contactIconOne.label %}
            {{ icons.getIcon('contact-' ~ iconOne) }}
            {{ card.contactHeadingOne }}
        </div>
        <div class="contact-card-meta grid-cols-1">
            {% for info in card.contactInfoOne %}
            <div>
                <div class="contact-card-meta-subtitle">{{ info.subheading }}</div>
                <div class="contact-card-meta-info">{{ info.text|nl2br }}</div>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="contact-card h-full">
        <div class="contact-card-title">
            {% set iconTwo = card.contactIconTwo.label %}
            {{ icons.getIcon('contact-' ~ iconTwo) }}
            {{ card.contactHeadingTwo }}
        </div>
        <div class="contact-card-meta grid-cols-1">
            {% for info in card.contactInfoTwo %}
            <div>
                <div class="contact-card-meta-subtitle">{{ info.subheading }}</div>
                <div class="contact-card-meta-info">{{ info.text|nl2br }}</div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% if align is defined %}
    
    {% if align == 'left' %}
        {% set firstOrder = 'lg:order-1' %}
        {% set secondOrder = 'lg:order-2' %}
    {% else %}
        {% set firstOrder = 'lg:order-2' %}
        {% set secondOrder = 'lg:order-1' %}
    {% endif %}
    
{% else %}

    {% set firstOrder = '' %}
    {% set secondOrder = '' %}

{% endif %}

<section class="py-9 lg:py-16 px-4 lg:px-20">
    <div class="container mx-auto">
        {# TODO: Make dynamic with passed products object #}
        <div class="flex flex-col lg:flex-row gap-6 lg:gap-24">

            {# Media - Product Slider #}
            <div class="w-full lg:w-3/5 {{ firstOrder }}">
                <div class="bg-blue-100 rounded-2xl lg:rounded-3xl order">
                    <div x-data="{...productswiper({
                        loop: true,
                        slidesPerView: 1,
                        init:false,
                        pagination: {
                            el: '.swiper-pagination',
                            clickable: true,
                        },
                        navigation: {
                            nextEl: '.swiper-button-next',
                            prevEl: '.swiper-button-prev',
                        }
                        })}" x-ref="swiper" class="swiper p-4">
                        <div class="swiper-wrapper">
                            <div class="swiper-slide bg-blue-100 bg-no-repeat aspect-[5/3] bg-center bg-contain" style="background-image:url('/images/example-product.png');"></div>
                            <div class="swiper-slide bg-blue-100 bg-no-repeat aspect-[5/3] bg-center bg-contain" style="background-image:url('/images/example-product.png');"></div>
                            <div class="swiper-slide bg-blue-100 bg-no-repeat aspect-[5/3] bg-center bg-contain" style="background-image:url('/images/example-product.png');"></div>
                            <div class="swiper-slide bg-blue-100 bg-no-repeat aspect-[5/3] bg-center bg-contain" style="background-image:url('/images/example-product.png');"></div>
                        </div>
                        <div class="swiper-pagination"></div>
                        <div class="swiper-button-prev"></div>
                        <div class="swiper-button-next"></div>
                    </div>
                </div>
            </div>

            {# Content #}
            <div class="w-full lg:w-2/5 flex flex-col justify-center {{ secondOrder }}">
                <div class="font-effra font-[600] text-xs lg:text-lg leading-[1.4] lg:leading-[1.3] tracking-[2px] uppercase text-blue-700 mb-4">Overline</div>
                <h2 class="font-effra font-bold text-[1.75rem] lg:text-5xl leading-[1.2] lg:leading-[1.1] text-blue-900 mb-6">Heading</h2>
                <div class="paragraph-lg">Lorem ipsum dolor sit amet consectetur. Auctor nec quis facilisi tortor egestas mi quis. Elementum euismod a facilisis aenean accumsan eget turpis nulla vulputate. Sit cras metus bibendum condimentum amet.</div>
                <div class="flex flex-col lg:flex-row gap-4 mt-4 lg:mt-10">
                    <button class="button w-full lg:w-max">Button Text</button>
                    <button class="button button--secondary w-full lg:w-max">Button Text</button>
                </div>
            </div>

        </div>
    </div>
</section>